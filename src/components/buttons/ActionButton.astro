---
import Image from "astro/components/Image.astro";
import cntl from "cntl";

interface ActionButton {
  label: string;
  uri: string;
  extendClass?: string;
  svg?: string;
  isPrimary?: boolean;
}

const { label, uri, extendClass, svg, isPrimary } = Astro.props;

const buttonClasses = cntl`
  btn
  btn-md
  ${extendClass} 
  ${isPrimary ? "btn-primary" : "btn-outline"}
`;
---

<a href={uri}>
  <button class={buttonClasses}>
    {svg && <Image src={svg} alt={label} class="w-6 h-6" />}
    {label}
  </button></a
>

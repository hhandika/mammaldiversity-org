---
// Parse MDD data to a list of text with links
import Link from "./Link.astro";

const { content } = Astro.props;

// Split content by "|"
const textData: string[] = content.includes("|")
  ? content.split("|").map((part: string) => part.trim())
  : [content];
---

{
  content
    .split(/(http\S+)/g)
    .map((part: string) =>
      part.startsWith("http") ? (
        <Link
          url={part.replace(/[.,!?)]*$/, "")}
          label={part.replace(/[.,!?)]*$/, "")}
          extendClass="-mr-1"
        />
      ) : (
        part
      )
    )
}

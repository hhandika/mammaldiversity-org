---
// Text span with _italic_ formatting awareness

interface Props {
  text: string;
}

const { text } = Astro.props as Props;
---

{
  text
    .split(/(_[^_]*?_)/g)
    .map((part) =>
      /^_[a-zA-Z0-9]+_$/.test(part) ? (
        <span class="italic">{part.slice(1, -1)}</span>
      ) : (
        part
      )
    )
}

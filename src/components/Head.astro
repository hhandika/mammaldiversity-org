---
import { join } from "path";

const { title } = Astro.props;

const pageFindPath = join(import.meta.env.BASE_URL, "pagefind/pagefind-ui.css");
---

<head>
  <meta charset="UTF-8" />
  <meta name="description" content="ASM Mammal Diversity Database" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link href={pageFindPath} rel="stylesheet" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
</head>

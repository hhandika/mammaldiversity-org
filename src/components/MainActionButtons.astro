---
import ActionButton from "./buttons/ActionButton.astro";
import Link from "./Link.astro";
import searchIcon from "../assets/svg/search.svg";

interface MainActionButtons {
  searchURI: string;
  downloadURI: string;
  previousVersionsURI: string;
  versionDescription: string;
}

const { searchURI, downloadURI, previousVersionsURI, versionDescription } =
  Astro.props;
---

<div class="flex gap-4 mt-16">
  <div>
    <ActionButton label="Download latest version" uri={downloadURI} />
  </div>
  <div>
    <ActionButton
      label="Search database"
      uri={searchURI}
      svg={searchIcon}
      isPrimary
    />
  </div>
</div>
<div>
  <p class="text-left text-xs mt-2">
    {versionDescription}. Previous versions are available on <Link
      url={previousVersionsURI}
      label="Zenodo"
    />.
  </p>
</div>

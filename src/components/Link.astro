---
interface LinkProps {
  label?: string;
  url: string;
}

const { label, url } = Astro.props as LinkProps;

const text = label ? label : url;
---

<a
  class="underline text-spectra-700 dark:text-spectra-300 break-words overflow-clip text-ellipsis"
  href={url}
  target="_blank"
  rel="noopener noreferrer">{text}</a
>

---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="ASM Mammal Diversity Database" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/mammaldiversity-org/favicon.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <body class="bg-white dark:bg-black">
      <div
        class="relative text-lg isolate px-6 pt-8 lg:px-8 dark:text-slate-100"
      >
        <Header />
        <slot />
      </div>
    </body>
  </body>
  <Footer />
</html>
